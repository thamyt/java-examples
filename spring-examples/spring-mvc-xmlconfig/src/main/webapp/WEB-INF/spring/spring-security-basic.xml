        <sec:csrf disabled="true"/>
    </sec:http>
-->    
    <!-- Option 3: use browser login form -->
<!-- 
    <sec:http>
        <sec:intercept-url pattern="/jsp/admin/**" access="hasRole('ROLE_USER')" />
		<sec:http-basic />
        <sec:csrf disabled="true"/>
    </sec:http>
 -->    
    <!-- Option 4: use custom login form -->
    <sec:http pattern="/login.jsp*" security="none" />    	
    <sec:http>
        <sec:intercept-url pattern="/jsp/admin/**" access="hasRole('ROLE_USER')" />
        <sec:form-login login-page="/login.jsp"  />
		<sec:http-basic />
        <sec:csrf disabled="true"/>
    </sec:http>
 

    <sec:authentication-manager>
        <sec:authentication-provider>
            <sec:user-service>
                <sec:user name="test1" password="{noop}Password111" authorities="ROLE_USER" />
                <sec:user name="test2" password="{noop}Password222" authorities="ROLE_USER" />
                <sec:user name="test3" password="{noop}Password333" authorities="ROLE_USER" />
            </sec:user-service>
        </sec:authentication-provider>
    </sec:authentication-manager>
</beans>
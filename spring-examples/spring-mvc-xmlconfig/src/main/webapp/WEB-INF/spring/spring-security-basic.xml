    </sec:http>
 -->
	<!-- Option 2: same as option 1 without auto-config. explicitly specify the security features -->
<!-- 
	<sec:http>
        <sec:intercept-url pattern="/jsp/admin/**" access="hasRole('ROLE_USER')" />
        <sec:form-login />

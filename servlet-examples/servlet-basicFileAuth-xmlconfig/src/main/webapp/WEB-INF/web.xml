<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xmlns="http://java.sun.com/xml/ns/javaee"
		 xmlns:web="http://java.sun.com/xml/ns/javaee"
		 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
		 version="3.0">

	<display-name>Servlet - Basic File Authentication Demo</display-name>

	<servlet>
		<description></description>
		<display-name>HomeServlet</display-name>
		<servlet-name>HomeServlet</servlet-name>
		<servlet-class>com.example.basicFileAuth.HomeServlet</servlet-class>
	</servlet>
	<servlet>
		<description></description>
		<display-name>PublicServlet</display-name>
		<servlet-name>PublicServlet</servlet-name>
		<servlet-class>com.example.basicFileAuth.PublicPageServlet</servlet-class>
	</servlet>	
	<servlet>
		<description></description>
		<display-name>CashierServlet</display-name>
		<servlet-name>CashierServlet</servlet-name>
		<servlet-class>com.example.basicFileAuth.CashierPageServlet</servlet-class>
	</servlet>
	<servlet>
		<description></description>
		<display-name>SupervisorServlet</display-name>
		<servlet-name>SupervisorServlet</servlet-name>
		<servlet-class>com.example.basicFileAuth.SupervisorPageServlet</servlet-class>
	</servlet>
	<servlet>
		<description></description>
		<display-name>ManagerServlet</display-name>
		<servlet-name>ManagerServlet</servlet-name>
		<servlet-class>com.example.basicFileAuth.ManagerPageServlet</servlet-class>
	</servlet>
	<servlet>
		<description></description>
		<display-name>DirectorServlet</display-name>
		<servlet-name>DirectorServlet</servlet-name>
		<servlet-class>com.example.basicFileAuth.DirectorPageServlet</servlet-class>
	</servlet>
 
	<servlet-mapping>
		<servlet-name>HomeServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PublicServlet</servlet-name>
		<url-pattern>/public</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CashierServlet</servlet-name>
		<url-pattern>/secure/cashier</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SupervisorServlet</servlet-name>
		<url-pattern>/secure/supervisor</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ManagerServlet</servlet-name>
		<url-pattern>/secure/manager</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DirectorServlet</servlet-name>
		<url-pattern>/secure/director</url-pattern>
	</servlet-mapping>	
	
	<security-constraint>
        <web-resource-collection>
            <web-resource-name>secured-urls</web-resource-name>
            <url-pattern>/secure/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>cashier</role-name>
            <role-name>supervisor</role-name>
            <role-name>manager</role-name>
            <role-name>director</role-name>
        </auth-constraint>
        <user-data-constraint>
			<transport-guarantee>NONE</transport-guarantee>
		</user-data-constraint>
    </security-constraint>
    
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>cashier-url</web-resource-name>
            <url-pattern>/secure/cashier/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>cashier</role-name>
            <role-name>supervisor</role-name>
        </auth-constraint>
        <user-data-constraint>
			<transport-guarantee>NONE</transport-guarantee>
		</user-data-constraint>
    </security-constraint>
    
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>supervisor-url</web-resource-name>
            <url-pattern>/secure/supervisor/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>supervisor</role-name>
        </auth-constraint>
        <user-data-constraint>
			<transport-guarantee>NONE</transport-guarantee>
		</user-data-constraint>
    </security-constraint>
    
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>manager-url</web-resource-name>
            <url-pattern>/secure/manager/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>manager</role-name>
        </auth-constraint>
        <user-data-constraint>
			<transport-guarantee>NONE</transport-guarantee>
		</user-data-constraint>
    </security-constraint>
    
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>director-url</web-resource-name>
            <url-pattern>/secure/director/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>director</role-name>
        </auth-constraint>
        <user-data-constraint>
			<transport-guarantee>NONE</transport-guarantee>
		</user-data-constraint>
    </security-constraint>

    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>default</realm-name>
    </login-config>

	<!-- Security roles used by this web application -->
    <security-role>
        <role-name>cashier</role-name>
    </security-role>
    <security-role>
        <role-name>supervisor</role-name>
    </security-role>
    <security-role>
        <role-name>manager</role-name>
    </security-role>
    <security-role>
        <role-name>director</role-name>
    </security-role>
</web-app>
